---
export interface Props {
  title?: string; // Optional title
  description?: string; // Optional description
}

// Default Props
const { title = "TILMELD DIG VORES INTROMØDE OG FÅ MERE AT VIDE", description = "Få information om vores forskellige ophold og snak med tidligere elever" } = Astro.props;
---
<section class="bg-orange-400 text-beige-100 font-montserrat text-center py-m px-s">
    <!-- Title -->
    <h2 class="text-xl sm:text-2xl font-bold mb-xs">
      TILMELD DIG VORES INTROMØDE OG FÅ MERE AT VIDE
    </h2>
    <!-- Description -->
    <p class="text-sm sm:text-base font-bold mb-m">
      Få information om vores forskellige ophold og snak med tidligere elever
    </p>
    <!-- Email Input with Submit Link -->
    <form class="flex justify-center">
      <div class="relative w-full max-w-lg">
        <!-- Email Input -->
        <input
          type="email"
          placeholder="Indtast din e-mail..."
          class="w-full py-xxs pl-s pr-32 rounded-full border-none text-black placeholder-gray-500 focus:ring-2 focus:ring-beige-100 focus:outline-none"
          required
        />
        <!-- Submit Link -->
        <a
          href="#"
          class="absolute top-1/2 -translate-y-1/2 right-4 text-orange-500 font-bold hover:text-orange-600 transition"
        >
          SUBMIT
        </a>
      </div>
    </form>
  </section>